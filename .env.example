# AWS Bedrock Configuration
# Set these environment variables to enable AWS Bedrock AI integration
# If not set, the system will fall back to local knowledge-based responses

# AWS Access Key ID for Bedrock authentication
AWS_ACCESS_KEY_ID=your_aws_access_key_here

# AWS Secret Access Key for Bedrock authentication
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# AWS Region (default: us-east-1)
AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_REGION=us-east-1

# Bedrock Model ID (default: anthropic.claude-v2)
BEDROCK_MODEL_ID=anthropic.claude-v2
NEXT_PUBLIC_BEDROCK_MODEL_ID=anthropic.claude-v2

# Dev Server Port (default: 3001)
DEV_SERVER_PORT=3001

# Force local responder (set to 'true' to use local knowledge base instead of Bedrock even if credentials are present)
# FORCE_LOCAL_RESPONDER=false
